<div class="col-sm-9 container justify-content-center text-break">
  <h2 class="text-center my-5">
    <%= "#{@user.nickname}" %>
  </h2>
  <table class="table">
    <tbody>
      <div class="text-center my-5">
        <%= image_tag "star.png", class: "rounded-circle img-fluid", size: '130x50' %>
      </div>
      <tr>
        <th class="table-col1">名前</th>
        <td class="table-col2"><%= @user.nickname %></td>
      </tr>
      <tr>
        <th class="table-col1">プロフィール</th>
        <td class="table-col2"><%= @user.profile %></td>
      </tr>
      <tr>
        <th class="table-col1">得意科目</th>
        <td class="table-col2"><%= @user.fav_subj %></td>
      </tr>
      <tr>
        <th class="table-col1">苦手科目</th>
        <td class="table-col2"><%= @user.weak_subj %></td>
      </tr>
    </tbody>
  </table>
  <div class="text-center">
    <% if user_signed_in? && current_user == @user %>
      <%= link_to (edit_user_path) do %>  
        <button class="px-5 m-3 btn btn-primary btn-lg">
          Edit
        </button>
      <% end %>
    <% end %>
      <%= link_to (root_path) do %>  
        <button class="px-5 m-3 btn btn-primary btn-lg">
          Back
        </button>
      <% end %>
  </div>
</div>
