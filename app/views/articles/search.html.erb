

<div class="container-fluid vh-100 article-show">
  <div class="title text-center">
    <h3>検索結果</h3>
  </div>
  <div class="row text-break article-contents">
    <% if @articles.present? %>
      <% @articles.each do |article| %>
        <div class="p-3 col-md-3 text-center">
          <%= link_to (article_path(article.id)) do %>
            <% if article.user.image.attached? %>
              <%= image_tag(article.user.image.variant(resize: '150x150'), class: "rounded-circle img-fluid") %>
            <% else %>
              <%= image_tag "avatardefault_92824.png", size: "150x150", class: "rounded-circle img-fluid" %>
            <% end %>
            <div class="card">
              <div class="card-body bg-light">
                <%= article.title %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <h2>検索結果はありません</h2>
    <% end %>
  </div>
</div>
