<div class="wrapper">
  <div class="chat">
    <div class="chat-header">
        <div class="header-button">
          <%= link_to "Exit", "#" %>
        </div>
    </div>
    <div class="messages" id="messages">
      <%= render partial: 'messages/message', collection: @messages %>
    </div>
    <% if user_signed_in? %>
        <%= form_with model: [article, message], class: 'form', id: "new_article", local: true do |f| %>
          <div class="form-input">
            <%= f.text_area :content, class: 'form-message', placeholder: 'コメントしよう！',id: "message_text_field" %>
          </div>
            <%= f.submit '送信', class: 'form-submit', id: "submit_btn" %>
        <% end %>
    <% end %>
  </div>
</div>




